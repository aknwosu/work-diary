<main>
  <h1>Login</h1>
    <%= flash[:warning] %>
  
  <%= form_with url: login_path, method: :post do |f| %>
    <div class="mb-3">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
	
    <div class="mb-3">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <%= f.submit "Sign in", class: "btn btn-primary"  %>
  <%end%>
  <div>
    <p> New user? 
      <%= link_to  "Create an account", sign_up_path %>
    </p>
  </div>
</main>
